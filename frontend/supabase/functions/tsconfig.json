{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowImportingTsExtensions": true,
    "lib": ["deno.window"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "types": ["@supabase/supabase-js"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
} 